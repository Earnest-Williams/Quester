cmake_minimum_required(VERSION 3.13)
project(oniguruma-download NONE)

include(ExternalProject)
ExternalProject_Add(oniguruma
    GIT_REPOSITORY https://github.com/kkos/oniguruma.git
    GIT_TAG master
    GIT_SHALLOW true
    GIT_PROGRESS true
    SOURCE_DIR "${CMAKE_CURRENT_BINARY_DIR}/oniguruma-src"
    BINARY_DIR "${CMAKE_CURRENT_BINARY_DIR}/oniguruma-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
